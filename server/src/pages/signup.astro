---
import Layout from "../layouts/Layout.astro";
---
<Layout title="Registro">
  <div class="flex justify-center items-center h-screen">
    <form action="/api/users" method="post" class="w-full max-w-xs bg-white shadow-md rounded px-8 pt-6 pb-8">
      <div class="mb-4">
        <label for="email" class="block text-gray-700 font-bold mb-2">Email</label>
        <input type="email" id="email" name="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required />
      </div>
      <div class="mb-6">
        <label for="password" class="block text-gray-700 font-bold mb-2">Contrase√±a</label>
        <input type="password" id="password" name="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required />
      </div>
      <div class="flex items-center justify-between">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Registrarse</button>
      </div>
    </form>
  </div>
</Layout>;
