---
import Layout from "../layouts/Layout.astro";
---

<Layout title="inicio sesion">
  <form action="/api/auth" method="post">
    <label for="email">Email</label>
    <input class="border px-2" type="email" id="email" name="email" required>
    <label for="password">Password</label>
    <input class="border px-2" type="password" id="password" name="password" required>
    <button class="bg-red-600 text-white px-2 py-1" type="submit">Iniciar sesion</button>
  </form>
</Layout>